@using acmManager.Web.Controllers
@inject UserController UserController;

<form class="row" id="ProfileForm" method="post" asp-action="UpdateUserProfile">
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-name">@L("UserInfo.Name")</label>
            <input class="form-control" type="text" disabled id="account-name" value="@(Model.Name ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-gender">@L("UserInfo.Gender")</label>
            <input class="form-control" type="text" id="account-gender" value="@L(Model.Gender.ToString())" disabled>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-sn">@L("UserInfo.StudentNumber")</label>
            <input class="form-control" type="text" disabled id="account-sn" value="@(Model.StudentNumber ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-cn">@L("UserInfo.ClassId")</label>
            <input class="form-control" type="text" name="ClassId" id="account-cn" value="@(Model.ClassId ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-org">@L("UserInfo.Org")</label>
            <input class="form-control" type="text" id="account-org" value="@(Model.Org ?? "null")" disabled>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-major">@L("UserInfo.Major")</label>
            <input class="form-control" type="text" id="account-major" name="Major" value="@(Model.Major ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-email">@L("UserInfo.Email")</label>
            <input class="form-control" name="Email" type="email" id="account-email" value="@(Model.Email ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-phone">@L("UserInfo.Mobile")</label>
            <input class="form-control" name="Mobile" type="text" id="account-phone" value="@(Model.Mobile ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-location">@L("UserInfo.Location")</label>
            <input class="form-control" type="text" name="Location" id="account-location" value="@(Model.Location ?? "null")">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-st-type">@L("UserInfo.StudentType")</label>
            <input class="form-control" type="text" id="account-st-type" value="@(Model.StudentType ?? "null")" disabled>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-type">@L("UserInfo.Type")</label>
            <input class="form-control" type="text" id="account-type" value="@L(Model.Type.ToString())" disabled>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-id">ID</label>
            <input class="form-control" type="text" id="account-id" value="@(Model.UserId)" disabled>
        </div>
    </div>
    <div class="col-12">
        <hr class="mt-2 mb-3">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div class="d-block">
                <div class="alert alert-danger" style="display: none"></div>
            </div>
            <button class="btn btn-style-1 btn-primary" type="button" id="UpdateProfile">Upadte Profile</button>
        </div>
    </div>
</form>
