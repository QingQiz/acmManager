@using acmManager.Web.Models.Shared
@model acmManager.Web.Models.Article.IndexViewModel

@section styles
{
    @await Html.PartialAsync("Template/_MdPreviewHeader")
}

@section scripts
{
    @await Html.PartialAsync("Template/_MdPreviewFooter")
    <environment include="Development">
        <script src="~/view-resources/Views/Article/Index.js"></script>
        <script src="~/js/editor.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/view-resources/Views/_Bundles/article.index.min.js"></script>
        <script src="~/view-resources/Views/_Bundles/editor.min.js"></script>
    </environment>
}

@{
    ViewBag.Title = "Article";
}


<div class="content-container" style="max-width: 1024px">
    @await Html.PartialAsync("Template/_ArticleTable", new ArticleViewModel
    {
        Articles = Model.Articles,
        Filter = Model.Filter,
        Search = true
    })
</div>