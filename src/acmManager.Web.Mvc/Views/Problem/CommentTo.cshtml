@model acmManager.Web.Models.Problem.CommentToSolutionViewModel

@section styles
{
    <link rel="stylesheet" href="~/editor.md/css/editormd.min.css">
    <link rel="stylesheet" href="~/css/editor.css">
}

@section scripts
{
    <script src="~/editor.md/editormd.min.js"></script>
    
    <environment include="Development">
        <script src="~/js/editor.js"></script>
        <script src="~/view-resources/Views/Problem/Comment.js"></script>
    </environment>
    
    <environment exclude="Development">
        <script src="~/view-resources/Views/_Bundles/editor.min.js"></script>
        <script src="~/view-resources/Views/_Bundles/solution.comment.min.js"></script>
    </environment>
}

<div class="content-container">
    <h4> COMMENT TO: 
        <a class="underlineHover" href="@Url.Action("GetSolution", new {solutionId = Model.Solution.Id})">
            @Model.Solution.SolutionTitle
        </a>
    </h4>
    <hr/>
    <form asp-action="CommentToSolution">
        <input type="hidden" name="SolutionId" value="@Model.Solution.Id">
        <input type="hidden" name="ReplyToCommentId" value="@Model.ReplyToCommentId">
        <div id="comment-content">
            <textarea hidden name="Content">@("Comment here...\n\n\n\n\n")</textarea>
        </div>

        <div class="text-right mt-3 noSelect" style="margin: inherit">
            <button class="btn btn-primary ml-2" style="letter-spacing: 2px">@L("Submit")</button>
        </div>
    </form>
</div>
